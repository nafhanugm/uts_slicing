<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProfileActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:id="@+id/btn_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="_iknip"
            android:layout_toRightOf="@id/btn_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_titik_tiga"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/titiktiga"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bell"
            android:layout_toLeftOf="@id/titiktiga"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/pp_pengikut"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_below="@id/toolbar"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/pp"
            android:id="@+id/pp"
            android:layout_weight="1.9"
            android:layout_marginEnd="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6956"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Postingan"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27,7jt"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengikut"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="219"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mengikuti"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ikhwan Hanipp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/pp_pengikut"
        android:id="@+id/nama"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programmer"
        android:textSize="14dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/nama"
        android:textStyle=""
        android:textColor="#9A9A9A"
        android:id="@+id/job"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â€œYou might not think that programmers are  artists, but programming is an extremely creative profession. Itâ€™s  logic-based creativity.â€ â€“ John Romero  ðŸ’»"
        android:textSize="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@id/job"
        android:textStyle=""
        android:textColor="@color/black"
        android:id="@+id/bio"
        />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bio"
            android:padding="16dp"
            android:id="@+id/rl_button"
        android:layout_marginTop="10dp"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#EFEFEF"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:paddingHorizontal="55dp"


            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bagikan Profile"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#EFEFEF"
            android:textColor="#000000"
            android:paddingHorizontal="45dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:layout_weight="1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_button"
        android:id="@+id/tiga_icon"
        android:paddingHorizontal="32dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_feed"
            android:id="@+id/ic_feed"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_reels"
            android:layout_centerInParent="true"
            android:id="@+id/ic_reels"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_tag"
            android:layout_alignParentEnd="true"
            android:id="@+id/ic_tag"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:layout_alignParentBottom="true"
        >
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_home"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:id="@+id/btn_rumah"
            />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_search"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_upload"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"

            />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_reels"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"

            />
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_profile_active"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"

            />
    </LinearLayout>


</RelativeLayout>